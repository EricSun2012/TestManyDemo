<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:clock="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.robot.anyDemo.ThridDimensional.ClockView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        clock:backgroundColor="#237EAD"
        clock:layout_constraintBottom_toBottomOf="parent"
        clock:layout_constraintLeft_toLeftOf="parent"
        clock:layout_constraintRight_toRightOf="parent"
        clock:layout_constraintTop_toTopOf="parent"
        clock:textSize="15sp" />


</android.support.constraint.ConstraintLayout>