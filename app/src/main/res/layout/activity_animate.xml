<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingRight="32dp"
    android:paddingLeft="12dp"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/animate_rotation"
        android:layout_width="74dp"
        android:layout_height="38dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimary"
        android:text="旋转动画"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/animate_scale"
        android:layout_width="74dp"
        android:layout_height="38dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimary"
        android:text="缩放动画"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toRightOf="@+id/animate_rotation"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/animate_value"
        android:layout_width="74dp"
        android:layout_height="38dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimary"
        android:text="value动画"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toRightOf="@+id/animate_scale"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/animate_translation"
        android:layout_width="74dp"
        android:layout_height="38dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimary"
        android:text="平移动画"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="@+id/animate_rotation"
        app:layout_constraintTop_toBottomOf="@+id/animate_rotation" />


    <Button
        android:id="@+id/animate_bounce"
        android:layout_width="74dp"
        android:layout_height="38dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimary"
        android:text="橡皮筋动画"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="@+id/animate_scale"
        app:layout_constraintTop_toBottomOf="@+id/animate_scale" />


    <Button
        android:id="@+id/animate_color"
        android:layout_width="74dp"
        android:layout_height="38dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimary"
        android:text="渐变色动画"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="@+id/animate_value"
        app:layout_constraintTop_toBottomOf="@+id/animate_value" />


    <Button
        android:id="@+id/animate_svg"
        android:layout_width="74dp"
        android:layout_height="38dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimary"
        android:text="svg动画"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="@+id/animate_rotation"
        app:layout_constraintTop_toBottomOf="@+id/animate_translation" />


    <ImageView
        android:id="@+id/animate_pic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/details_store_ic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animate_svg" />

    <com.robot.anyDemo.widget.ProgressButton
        android:id="@+id/animate_progress"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="@string/app_name"
        android:textAllCaps="false"
        android:textColor="@color/md_white_1000"
        app:buttonColor="@color/md_amber_300"
        app:cornerRadius="8dp"
        app:progressBackColor="@color/md_amber_300"
        app:layout_constraintLeft_toLeftOf="@+id/animate_svg"
        app:layout_constraintTop_toBottomOf="@+id/animate_svg"
        app:progressColor="@color/md_amber_800"
        app:progressMargin="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>